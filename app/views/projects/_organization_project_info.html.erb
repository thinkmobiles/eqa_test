<div class="project">
  <div class="project-main-info">
    <%= link_to project_path(project.id) do %>
      <%= image_tag project.logo.file.url(:medium), class: 'project-logo' %>
    <% end %>
    <div class="name-block">
      <%= link_to project_path(project.id),
                  class: 'project-name' do %>
        <%= project.try(:title) %>
      <% end %>
      <div class="platform">
        <% project.platforms.each do |platform| %>
          <div class="<%= platform_icon(platform.name) %>"><span class="fa fa-<%= platform_icon(platform.name) %>" aria-hidden="true"></span></div>
        <% end %>
      </div>
      <div class="last-update">
        <%= time_ago_in_words(project.updated_at) %>  <%= t 'ago' %>
      </div>
    </div>
  </div>
  <div class="project_counters" data-project-id="<%= project.id %>">
    <%= render 'projects/project_counters', project: project %>
  </div>
</div>
