[rails]
# Your server IP address
SERVER_IP

[rails:vars]
# Your application name
app_name=APP_NAME
# Your app domain (for nginx configuration)
app_domain=APP_DOMAIN

# unchangeble section

# deploy account name (account will be created at app server)
deploy_user=deploy
# deploy folder (project folder)
deploy_folder=/home/deploy/www/

ruby_version=2.3.1
rbenv_ruby_filename=ruby2.3
# unchangeble section

# Password for deploy_user (plain text)
user_password_plain=DEPLOY_USER_PASSWORD_PLAIN
# Password for deploy_user, encrypted in md5
# mkpasswd --method=sha-512 DEPLOY_USER_PASSWORD_PLAIN
user_password_sha_512=DEPLOY_USER_PASSWORD_SHA_512

# GitHub account data for cloning project
git_https_username=GIT_HTTPS_USERNAME
git_https_password=GIT_HTTPS_PASSWORD

# Server root account password
# password is not send anywhere else except your server
# and can be changed on server after project will be deployed
root_password=ROOT_PASSWORD

# secret_key_base
# the simplest way to ge it is to run in console next command
# openssl rand -hex 64
secret_key_base=SECRET_KEY_BASE

# email wich will be in FROM field
secret_email=SECRET_EMAIL
# plain email password
secret_email_password=SECRET_EMAIL_PASSWORD
# mail.thinkmobiles.com, for example
action_mailer_address=ACTION_MAILER_ADDRESS
# thinkmobiles.com (see action_mailer_address value)
action_mailer_sdomain=ACTION_MAILER_SDOMAIN

# devise_email email wich will be in "From" field when you will restore your account
devise_email=DEVISE_EMAIL

# devise_secret_key serve for security porposes
# the simplest way to ge it is to run in console next command
# openssl rand -hex 64
devise_secret_key=DEVISE_SECRET_KEY

# open ssl sertificate configuration

# ssl_sertificate_present MUST BE true or false
ssl_sertificate_present=false
# absolute path to .crt sertificate file
ssl_certificate=CERTIFICATE_FILE_ABSOLUTE_PATH
# absolute path to .txt sertificate file
ssl_certificate_key=KEY_FILE_ABSOLUTE_PATH
